<Window x:Class="loginkosto4.winBlock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginkosto4"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize"        
        WindowStartupLocation="CenterScreen" Background="#6949D7"
        Title="winBlock" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="waitBox"
                 Text="Блокировка входа"
                 TextAlignment="Center"
                 Margin="150,0,263,189"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 FontSize="36" 
                 IsReadOnly="True" 
                 BorderThickness="0"
                 Width="379" TextDecorations="{x:Null}"/>

        <Label x:Name="ltimer" HorizontalAlignment="Left" Margin="534,205,0,0" VerticalAlignment="Top" FontSize="36" BorderThickness="0" Height="61" Width="83"/>
    </Grid>
</Window>

